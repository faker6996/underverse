{
  "name": "ecommerce-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=--inspect next dev",
    "dev_v2": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "docker:local:up": "docker compose -f docker-compose.local.yml up -d",
    "docker:local:down": "docker compose -f docker-compose.local.yml down",
    "docker:local:ps": "docker compose -f docker-compose.local.yml ps",
    "docker:local:logs": "docker compose -f docker-compose.local.yml logs -f",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d ecommerce-web",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:restart": "npm run docker:down && npm run docker:up",
    "i18n:check": "node scripts/check-missing-keys.mjs",
    "i18n:check-locales": "node scripts/check-locales.mjs",
    "i18n:dedupe": "node scripts/dedupe-locales.mjs",
    "i18n:remove-unused": "node scripts/remove-unused-keys.mjs",
    "cleanup:console": "node scripts/remove-console-logs.mjs",
    "release:underverse": "npm --prefix packages/underverse run release",
    "release:underverse:minor": "npm --prefix packages/underverse run release:minor",
    "release:underverse:major": "npm --prefix packages/underverse run release:major",
    "release:underverse:beta": "npm --prefix packages/underverse run release -- --tag=beta"
    ,
    "dev:underverse": "npm --prefix packages/underverse run dev"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "axios": "^1.9.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.61.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cookie": "^1.0.2",
    "dotenv": "^17.2.2",
    "ioredis": "^5.8.1",
    "hls.js": "^1.5.13",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.534.0",
    "next": "^15.4.5",
    "next-intl": "^4.1.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.0",
    "postcss": "^8.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4.1.7",
    "tsx": "^4.16.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^15.5.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie": "^0.6.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.5.0",
    "typescript": "^5"
  }
}
